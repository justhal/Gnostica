@model Gnostica.Models.PlayerGame

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PlayerGame</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PlayerID" />
            <input type="hidden" asp-for="GameID" />
            <div class="form-group">
                <label asp-for="PieceColor" class="control-label"></label>
                <input asp-for="PieceColor" class="form-control" data-jscolor="{}" />
                <span asp-validation-for="PieceColor" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Eliminated" /> @Html.DisplayNameFor(model => model.Eliminated)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jscolor.js"></script>
}
